/* pages/home/home.wxss */

.ble-list {
  width: 96%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.ble-item {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background-color: #ffffff;
  margin-top: 10rpx;
}

.ble-prompt {
  width: 200rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-end;
  font-weight: bold;
  font-size: 32rpx;
  color: #585858;
}

.ble-value {
  width: calc( 100% - 200rpx );
  font-size: 24rpx;
  font-weight: bold;
}

.div-line-80 {
  margin-top: 10rpx;
  width: 80%;
  height: 1rpx;
  background-color: #ededed;
}

.stop-dis-border {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 20rpx;
}

.stop-discovery {
  width: 200rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background-color: #ffffff;
  font-size: 32rpx;
  color: #00bfff;
  border-style: solid;
  border-width: 1rpx;
  border-color: #00bfff;
  position: absolute;
  z-index: 100;
}