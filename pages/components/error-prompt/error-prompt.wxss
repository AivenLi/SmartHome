.page-hd-no {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 400rpx 0;
  color: #00bfff;
  font-size: 32rpx;
  font-weight: bold;
}

.page-content {
  font-size: 24rpx;
  color: #00bfff;
  font-weight: bold;
}

.refresh-again {
  width: 200rpx;
  height: 80rpx;
  margin-top: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background-color: #ffffff;
  font-size: 32rpx;
  color: #00bfff;
  border-style: solid;
  border-width: 1rpx;
  border-color: #00bfff;
}